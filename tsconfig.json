{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "target": "es6",
    "module": "ES2015",
    "lib": ["es5", "es6", "dom"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}